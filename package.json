{
  "name": "elevator-saga",
  "version": "1.0.0",
  "type": "module",
  "description": "A programming game about elevator control algorithms",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:zig": "./build-zig.sh",
    "preview": "vite preview",
    "test": "vitest",
