{
  "compilerOptions": {
    "checkJs": true,
    "noEmit": true,
    "target": "ES2024",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "lib": ["ES2024", "DOM"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": ["src/**/*.js", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "src/core/backends/*.example.js"]
}
